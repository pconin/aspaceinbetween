<style>
  #shopify-section-{{ section.id }} .product {
    padding-block: 0; /* Already applied on the section level */
  }

  @media screen and (min-width: 1000px) {
    #shopify-section-{{ section.id }} {
      --product-grid: auto / minmax(0, {{ section.settings.product_media_size | divided_by: 100.0 }}fr) minmax(0, {{ 100.0 | minus: section.settings.product_media_size | divided_by: 100.0 }}fr);
    }
  }
</style>

<div class="color-scheme color-scheme--{{ section.settings.color_scheme.id }}">
  {%- capture product_form_id -%}product-form-featured-product-{{ section.settings.product.id }}-{{ section.id }}{%- endcapture -%}

  <div class="container">
    <div class="section-spacing section-stack">
      {%- if section.settings.subheading != blank or section.settings.title != blank or section.settings.product != blank and section.settings.show_product_link -%}
        <div class="section-header">
          <div class="prose prose-justify-{{ section.settings.text_alignment }}">
            {%- render 'subheading', content: section.settings.subheading -%}

            {%- if section.settings.show_scrolling_title and section.settings.title != blank -%}
              <h2 class="{{ section.settings.title_tag }}">
                <marquee-text speed="0.3" direction="start-to-end" class="scrolling-content bleed">
                <span class="scrolling-content__item" style="font-size: var(--text-{{ section.settings.title_tag }})">
                  <span class="scrolling-content__text">
                    {%- render 'heading', content: section.settings.title, style: section.settings.title_tag, html_tag: 'span', instant: true -%}
                  </span>

                  {%- if section.settings.title_icon != 'none' -%}
                    <span class="shape shape--{{ section.settings.title_icon }}" style="font-size: var(--text-{{ section.settings.heading_size }})" aria-hidden="true"></span>
                  {%- endif -%}
                </span>
                </marquee-text>
              </h2>

            {%- else -%}
              {%- render 'heading', content: section.settings.title, indent: section.settings.title_icon, balance_text: true, style: section.settings.title_tag, html_tag: 'h2' -%}
            {%- endif -%}

            {%- if section.settings.product != blank and section.settings.show_product_link -%}
              {%- assign button_label = 'product.general.view_details' | t -%}
              {%- render 'button', content: button_label, href: section.settings.product.url, style: 'outline' -%}
            {%- endif -%}
          </div>
        </div>
      {%- endif -%}

      <product-rerender id="featured-product-{{ section.id }}" observe-form="{{ product_form_id }}" allow-partial-rerender>
        <div class="product">
          {%- if section.settings.product.media.size > 0 or section.settings.product == blank -%}
            {%- render 'product-gallery',
                product: section.settings.product,
                product_form_id: product_form_id,
                desktop_layout: section.settings.desktop_media_layout,
                desktop_carousel_controls: section.settings.desktop_carousel_controls,
                mobile_controls: section.settings.mobile_controls,
                enable_media_autoplay: section.settings.enable_media_autoplay,
                enable_video_looping: section.settings.enable_video_looping,
                enable_image_zoom: section.settings.enable_image_zoom,
                max_image_zoom_level: section.settings.max_image_zoom_level
            -%}
          {%- endif -%}

          {%- render 'product-info',
              product: section.settings.product,
              product_form_id: product_form_id,
              content_alignment: section.settings.content_alignment,
              context: 'featured_product'
          -%}
        </div>
      </product-rerender>
    </div>
  </div>
</div>

