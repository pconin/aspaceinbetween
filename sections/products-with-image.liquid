<style>
  #shopify-section-{{ section.id }} + .shopify-section {
    --section-enable-padding-collapsing: 0;
  }

  {%- if section.settings.mobile_product_layout == 'grid' -%}
    @media screen and (max-width: 699px) {
      #shopify-section-{{ section.id }} {
        {%- liquid
          assign mobile_products_per_row = section.settings.mobile_products_per_row

          if section.settings.products != blank
            assign mobile_products_per_row = mobile_products_per_row | at_most: section.settings.products.count
          endif
        -%}

        --product-list-column-count: {{ mobile_products_per_row }};
      }
    }
  {%- endif -%}

  {%- if section.settings.desktop_product_layout == 'grid' -%}
    @media screen and (min-width: 700px) {
      #shopify-section-{{ section.id }} {
        --product-list-column-count: 2;
      }
    }
  {%- endif -%}
</style>

<div class="color-scheme color-scheme--{{ section.settings.color_scheme.id }}">
  <div class="products-with-image">
    <div class="section-split">
      {%- comment -%}
      IMAGE WITH CONTENT PART
      {%- endcomment -%}
      <div class="products-with-image__image-wrapper @container/content-box" {% if section.settings.desktop_product_list_position == 'end' %}style="order: 2"{% endif %}>
        <div class="content-box min-h-auto md:min-h-screen">
          {%- if section.settings.image != blank -%}
            <div class="content-box__background-media with-overlay" style="--overlay: {{ section.settings.overlay_color.rgb }} / {{ section.settings.overlay_opacity | divided_by: 100.0 }}">
              {%- render 'media' with section.settings.image, mobile_media: section.settings.mobile_image, sizes: '(max-width: 699px) 100vw, 50vw' -%}
            </div>
          {%- endif -%}

          {%- liquid
            assign top_left_content = ''
            assign top_center_content = ''
            assign top_right_content = ''
            assign middle_left_content = ''
            assign middle_center_content = ''
            assign middle_right_content = ''
            assign bottom_left_content = ''
            assign bottom_center_content = ''
            assign bottom_right_content = ''
          -%}

          {%- if section.blocks.size > 0 -%}
            {%- assign previous_block_type = '' -%}

            {%- for block in section.blocks -%}
              {%- assign next_index = forloop.index0 | plus: 1 -%}
              {%- assign next_block_type = section.blocks[next_index].type -%}

              {%- capture block_content -%}
                {%- case block.type -%}
                  {%- when 'subheading' -%}
                    {%- render 'subheading', content: block.settings.text, block: block -%}
      
                  {%- when 'heading' -%}
                    {%- render 'heading', 
                      content: block.settings.text, 
                      highlight_effect: block.settings.highlight_effect, 
                      highlight_accent_color: block.settings.highlight_accent_color, 
                      highlight_text_color: block.settings.highlight_text_color, 
                      style: block.settings.heading_tag,
                      block: block 
                    -%}

                  {%- when 'icon' -%}
                    {%- if block.settings.image != blank -%}
                      <div {{ block.shopify_attributes }}>
                        {%- render 'icon', image: block.settings.image, width: block.settings.icon_width, mobile_width: block.settings.mobile_icon_width -%}
                      </div>
                    {%- else -%}
                      <div {{ block.shopify_attributes }}>
                        {%- render 'icon' with block.settings.icon, width: block.settings.icon_width, mobile_width: block.settings.mobile_icon_width, stroke_width: block.settings.icon_stroke_width -%}
                      </div>
                    {%- endif -%}

                  {%- when 'button' -%}
                    {%- if previous_block_type != 'button' and next_block_type == 'button' -%}
                      <div class="button-group">
                    {%- endif -%}

                    {%- render 'button',
                      content: block.settings.text,
                      href: block.settings.url,
                      style: block.settings.style,
                      background: block.settings.background,
                      text_color: block.settings.text_color,
                      block: block
                    -%}

                    {%- if previous_block_type == 'button' and next_block_type != 'button' -%}
                      </div>
                    {%- endif -%}
      
                  {%- when 'richtext' -%}
                    {%- if block.settings.text != blank -%}
                      <div class="max-w-sm" {{ block.shopify_attributes }}>
                        {{- block.settings.text -}}
                      </div>
                    {%- endif -%}
                {%- endcase -%}
              {%- endcapture -%}

              {%- assign previous_block_type = block.type -%}
      
              {%- liquid
                case block.settings.position
                  when 'top_left'
                    assign top_left_content = top_left_content | append: block_content
                  when 'top_center'
                    assign top_center_content = top_center_content | append: block_content
                  when 'top_right'
                    assign top_right_content = top_right_content | append: block_content
                  when 'middle_left'
                    assign middle_left_content = middle_left_content | append: block_content
                  when 'middle_center'
                    assign middle_center_content = middle_center_content | append: block_content
                  when 'middle_right'
                    assign middle_right_content = middle_right_content | append: block_content
                  when 'bottom_left'
                    assign bottom_left_content = bottom_left_content | append: block_content
                  when 'bottom_center'
                    assign bottom_center_content = bottom_center_content | append: block_content
                  when 'bottom_right'
                    assign bottom_right_content = bottom_right_content | append: block_content
                endcase
              -%}
            {%- endfor -%}
          {%- endif -%}
      
          <div class="placement-grid">
            {% if top_left_content != blank %}
              <div class="prose prose-justify-start place-self-start">
                {{- top_left_content -}}
              </div>
            {%- endif -%}
      
            {% if top_center_content != blank %}
              <div class="prose prose-justify-center place-self-start-center">
                {{- top_center_content -}}
              </div>
            {%- endif -%}
      
            {% if top_right_content != blank %}
              <div class="prose prose-justify-end place-self-start-end">
                {{- top_right_content -}}
              </div>
            {%- endif -%}
      
            {% if middle_left_content != blank %}
              <div class="prose prose-justify-start place-self-center-start">
                {{- middle_left_content -}}
              </div>
            {%- endif -%}
      
            {% if middle_center_content != blank %}
              <div class="prose prose-justify-center place-self-center">
                {{- middle_center_content -}}
              </div>
            {%- endif -%}
      
            {% if middle_right_content != blank %}
              <div class="prose prose-justify-end place-self-center-end">
                {{- middle_right_content -}}
              </div>
            {%- endif -%}
      
            {% if bottom_left_content != blank %}
              <div class="prose prose-justify-start place-self-end-start">
                {{- bottom_left_content -}}
              </div>
            {%- endif -%}
      
            {% if bottom_center_content != blank %}
              <div class="prose prose-justify-center place-self-end-center">
                {{- bottom_center_content -}}
              </div>
            {%- endif -%}
      
            {% if bottom_right_content != blank %}
              <div class="prose prose-justify-end place-self-end">
                {{- bottom_right_content -}}
              </div>
            {%- endif -%}
          </div>
        </div>
      </div>
      
      {%- comment -%}
      PRODUCT LIST PART.

      NOTE: we have to restore the default color scheme on the right part, as the cards are actually using a unified color scheme
      {%- endcomment -%}
      {%- liquid
        assign stack_mobile = false
        assign stack_desktop = false
        assign carousel_id = 'products-with-image-carousel-' | append: section.id

        if section.settings.mobile_product_layout == 'grid'
          assign stack_mobile = true
        endif

        if section.settings.desktop_product_layout == 'grid'
          assign stack_desktop = true
        endif
      -%}

      <div class="products-with-image__products-wrapper min-h-full color-scheme color-scheme--{{ settings.default_color_scheme.id }}" {% if section.settings.desktop_product_list_position == 'end' %}style="order: 1"{% endif %}>
        <div class="md:hidden">
          {%- render 'product-list', products: section.settings.products, prefix_id: 'mobile', stack: stack_mobile, section_color_scheme: settings.default_color_scheme, show_placeholder: true -%}
        </div>

        {%- if stack_desktop -%}
          <div class="md-max:hidden">
            {%- render 'product-list', products: section.settings.products, prefix_id: 'desktop', stack: stack_desktop, section_color_scheme: settings.default_color_scheme, show_placeholder: true -%}
          </div>
        {%- else -%}
          <div class="products-with-image__carousel-container md-max:hidden">
            <div class="h-stack gap-10 align-center w-full">
              {%- if section.settings.products.count > 1 or section.settings.products == blank -%}
                <carousel-prev-button aria-controls="{{ carousel_id }}">
                  <button type="button" class="products-with-image__carousel-arrow tap-area" disabled>
                    <span class="sr-only">{{ 'general.accessibility.previous' | t }}</span>
                    {%- render 'icon' with 'big-arrow-left', width: 16, direction_aware: true -%}
                  </button>
                </carousel-prev-button>
              {%- endif -%}

              {%- render 'product-list', products: section.settings.products, prefix_id: 'desktop', stack: stack_desktop, spotlight: true, section_color_scheme: settings.default_color_scheme, id: carousel_id, show_placeholder: true -%}

              {%- if section.settings.products.count > 1 or section.settings.products == blank -%}
                <carousel-next-button aria-controls="{{ carousel_id }}">
                  <button type="button" class="products-with-image__carousel-arrow tap-area">
                    <span class="sr-only">{{ 'general.accessibility.next' | t }}</span>
                    {%- render 'icon' with 'big-arrow-right', width: 16,  direction_aware: true -%}
                  </button>
                </carousel-next-button>
              {%- endif -%}
            </div>

            {%- if section.settings.products.count > 1 or section.settings.products == blank -%}
              <carousel-navigation class="scroll-marker-group scroll-marker-group--lines md-max:hidden" aria-controls="{{ carousel_id }}">
                {%- for i in (1..section.settings.products.count) -%}
                  <button class="scroll-marker tap-area tap-area--sm" type="button" aria-current="{% if forloop.first %}true{% else %}false{% endif %}">
                    <span class="sr-only">{{ 'general.accessibility.go_to_item' | t: index: forloop.index }}</span>
                  </button>
                {%- else -%}
                  {%- for i in (1..4) -%}
                    <button class="scroll-marker--line tap-area tap-area--sm" type="button" aria-current="{% if forloop.first %}true{% else %}false{% endif %}">
                      <span class="sr-only">{{ 'general.accessibility.go_to_item' | t: index: forloop.index }}</span>
                    </button>
                  {%- endfor -%}
                {%- endfor -%}
              </carousel-navigation>
            {%- endif -%}
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

