{%- if section.settings.secondary_media_shape contains 'blob' -%}
  {{- 'clip-blob.css' | asset_url | stylesheet_tag -}}
{%- endif -%}

<style>
  #shopify-section-{{ section.id }} {
    {%- if section.settings.content_position == 'start' -%}
      --section-split-grid-template-columns: minmax(0, {{ 100 | minus: section.settings.content_percentage_width | divided_by: 100.0 }}fr) minmax(0, {{ section.settings.content_percentage_width | divided_by: 100.0 }}fr);
    {%- else -%}
      --section-split-grid-template-columns: minmax(0, {{ section.settings.content_percentage_width | divided_by: 100.0 }}fr) minmax(0, {{ 100 | minus: section.settings.content_percentage_width | divided_by: 100.0 }}fr);
    {%- endif -%}
  }

  #shopify-section-{{ section.id }} + .shopify-section {
    --section-enable-padding-collapsing: 0; /* We turn off the padding collapsing on next section */
  }
</style>

<div class="color-scheme color-scheme--{{ section.settings.color_scheme.id }}">
  <div class="section-split {% if section.settings.content_position == 'end' %}section-split--reverse{% endif %}">
    {%- comment -%}
    IMAGE PART
    {%- endcomment -%}

    <div class="section-split__column section-split__column--image {% unless section.settings.add_media_spacing %}section-split__column--flushed{% endunless %}">
      <div class="content-box h-full">
        <div class="content-box__background-media">
          {%- liquid
            if section.settings.primary_video != blank
              assign show_controls = true

              if section.settings.autoplay_video
                assign show_controls = false
              endif

              render 'media', media: section.settings.primary_video, autoplay: section.settings.autoplay_video, loop: section.settings.autoplay_video, controls: show_controls
            elsif section.settings.primary_image != blank
              echo section.settings.primary_image | image_url: width: section.settings.primary_image.width | image_tag: sizes: '(max-width: 699px) 100vw, 50vw', widths: '200,300,400,500,600,800,1000,1200,1400,1600,1800,2000'
            elsif section.settings.secondary_image == blank and section.settings.secondary_video == blank
              echo 'blog-apparel-2' | placeholder_svg_tag: 'size-full'
            endif
          -%}
        </div>

        {%- if section.settings.secondary_image != blank or section.settings.secondary_video != blank -%}
          {%- capture media_style -%}--image-mobile-max-width: {{ section.settings.secondary_media_mobile_width }}%; --image-max-width: {{ section.settings.secondary_media_width }}%{%- endcapture -%}
          {%- capture media_class -%}{{ section.settings.secondary_media_alignment }} constrained-image clip-{{ section.settings.secondary_media_shape }} {% if section.settings.secondary_media_shape == 'circle' %}aspect-square{% endif %} {% unless section.settings.show_secondary_media_on_mobile %}sm-max:hidden{% endunless %}{%- endcapture -%}

          {%- if section.settings.secondary_video != blank -%}
            {%- render 'media', media: section.settings.secondary_video, autoplay: true, loop: true, class: media_class, style: media_style -%}
          {%- else -%}
            {{- section.settings.secondary_image | image_url: width: section.settings.secondary_image.width | image_tag: sizes: '(max-width: 699px) 275px, 400px', widths: '200,300,400,500,600,800,1000,1200', class: media_class, style: media_style -}}
          {%- endif -%}
        {%- endif -%}
      </div>
    </div>
    
    {%- comment -%}
    CONTENT PART
    {%- endcomment -%}

    {%- liquid
      assign top_left_content = ''
      assign top_center_content = ''
      assign top_right_content = ''
      assign middle_left_content = ''
      assign middle_center_content = ''
      assign middle_right_content = ''
      assign bottom_left_content = ''
      assign bottom_center_content = ''
      assign bottom_right_content = ''
      assign all_content = ''
    -%}

    {%- if section.blocks.size > 0 -%}
      {%- for block in section.blocks -%}
        {%- capture block_content -%}
          {%- case block.type -%}
            {%- when 'subheading' -%}
              {%- render 'subheading', content: block.settings.text, block: block -%}

            {%- when 'heading' -%}
              {%- render 'heading', 
                content: block.settings.text, 
                highlight_effect: block.settings.highlight_effect, 
                highlight_accent_color: block.settings.highlight_accent_color, 
                highlight_text_color: block.settings.highlight_text_color, 
                style: block.settings.heading_tag,
                block: block 
              -%}

            {%- when 'button' -%}
              {%- render 'button', 
                content: block.settings.text,
                href: block.settings.url,
                style: block.settings.style,
                background: block.settings.background,
                text_color: block.settings.text_color,
                block: block
              -%}

            {%- when 'icon' -%}
              {%- if block.settings.image != blank -%}
                {%- render 'icon', image: block.settings.image, width: block.settings.icon_width, mobile_width: block.settings.mobile_icon_width, block: block -%}
              {%- else -%}
                {%- render 'icon' with block.settings.icon, width: block.settings.icon_width, mobile_width: block.settings.mobile_icon_width, stroke_width: block.settings.icon_stroke_width, block: block -%}
              {%- endif -%}

            {%- when 'richtext' -%}
              {%- if block.settings.text != blank -%}
                <div class="max-w-sm" {{ block.shopify_attributes }}>
                  {{- block.settings.text -}}
                </div>
              {%- endif -%}
          {%- endcase -%}
        {%- endcapture -%}

        {%- case block.settings.position -%}
          {%- when 'top_left' -%}
            {% assign top_left_content = top_left_content | append: block_content %}
          {%- when 'top_center' -%}
            {% assign top_center_content = top_center_content | append: block_content %}
          {%- when 'top_right' -%}
            {% assign top_right_content = top_right_content | append: block_content %}
          {%- when 'middle_left' -%}
            {% assign middle_left_content = middle_left_content | append: block_content %}
          {%- when 'middle_center' -%}
            {% assign middle_center_content = middle_center_content | append: block_content %}
          {%- when 'middle_right' -%}
            {% assign middle_right_content = middle_right_content | append: block_content %}
          {%- when 'bottom_left' -%}
            {% assign bottom_left_content = bottom_left_content | append: block_content %}
          {%- when 'bottom_center' -%}
            {% assign bottom_center_content = bottom_center_content | append: block_content %}
          {%- when 'bottom_right' -%}
            {% assign bottom_right_content = bottom_right_content | append: block_content %}
        {%- endcase -%}

        {%- assign all_content = all_content | append: block_content -%}
      {%- endfor -%}

      <div class="section-split__column {%- if section.settings.content_image_background != blank -%}section-split__column--flushed{% endif %} align-self-stretch">
        <div class="content-box min-h-full">
          {%- if section.settings.content_image_background != blank -%}
            <div class="content-box__background-media with-overlay" style="--overlay: {{ section.settings.overlay_color.rgb }} / {{ section.settings.overlay_opacity | divided_by: 100.0 }}">
              {{- section.settings.content_image_background | image_url: width: section.settings.content_image_background.width | image_tag: sizes: '(max-width: 699px) 100vw, 50vw', widths: '200,300,400,500,600,800,1000,1200,1400,1600,1800,2000' -}}
            </div>
          {%- endif -%}

          <div class="placement-grid {% unless section.settings.content_image_background %}span-full{% endunless %}">
            {% if top_left_content != blank %}
              <div class="place-self-start prose prose-justify-start">
                {{- top_left_content -}}
              </div>
            {%- endif -%}
      
            {% if top_center_content != blank %}
              <div class="place-self-start-center prose prose-justify-center">
                {{- top_center_content -}}
              </div>
            {%- endif -%}
      
            {% if top_right_content != blank %}
              <div class="place-self-start-end prose prose-justify-end">
                {{- top_right_content -}}
              </div>
            {%- endif -%}
      
            {% if middle_left_content != blank %}
              <div class="place-self-center-start prose prose-justify-start">
                {{- middle_left_content -}}
              </div>
            {%- endif -%}
      
            {% if middle_center_content != blank %}
              <div class="place-self-center prose prose-justify-center">
                {{- middle_center_content -}}
              </div>
            {%- endif -%}
      
            {% if middle_right_content != blank %}
              <div class="place-self-center-end prose prose-justify-end">
                {{- middle_right_content -}}
              </div>
            {%- endif -%}
      
            {% if bottom_left_content != blank %}
              <div class="place-self-end-start prose prose-justify-start">
                {{- bottom_left_content -}}
              </div>
            {%- endif -%}
      
            {% if bottom_center_content != blank %}
              <div class="place-self-end-center prose prose-justify-center">
                {{- bottom_center_content -}}
              </div>
            {%- endif -%}
      
            {% if bottom_right_content != blank %}
              <div class="place-self-end prose prose-justify-end">
                {{- bottom_right_content -}}
              </div>
            {%- endif -%}
          </div>
        </div>
      </div>
    {%- endif -%}
  </div>
</div>

