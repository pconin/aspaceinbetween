      "step": 2,
      "unit": "px",
      "default": 16
    },
    {
      "type": "checkbox",
      "id": "drawer_show_nested_menu_indicator",
      "label": "t:sections.header.drawer_show_nested_menu_indicator",
      "default": false
    },
    {
      "type": "header",
