{%- if block.settings.text != blank -%}
  <style>
    #shopify-block-{{ block.id }} {
      font-size: clamp(10px, {{ block.settings.font_size_mobile }}vw, 80px);
      line-height: {{ block.settings.font_size_line_height }};
    }

    @media screen and (min-width: 1000px) {
      #shopify-block-{{ block.id }} {
        font-size: clamp(10px, {{ block.settings.font_size_desktop }}vw, 140px);
      }
    }
  </style>

  {%- render 'heading', 
    content: block.settings.text, 
    html_tag: block.settings.html_tag,
    highlight_effect: block.settings.highlight_effect, 
    highlight_accent_color: block.settings.highlight_accent_color, 
    highlight_text_color: block.settings.highlight_text_color, 
    show_vertically: block.settings.show_text_vertically,
    indent: block.settings.indent,
    block: block
  -%}
{%- endif -%}

{% schema %}
